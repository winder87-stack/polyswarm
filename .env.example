# ================================================
# POLYMARKET TRADING BOT - ENVIRONMENT CONFIGURATION
# ================================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# ================================================
# AI API KEYS (Required - need at least 3)
# ================================================

# Anthropic Claude
# Get key: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini
# Get key: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# OpenAI GPT
# Get key: https://platform.openai.com/api-keys
OOPENAI_API_KEY=your_openai_api_key_here

# OpenRouter (for DeepSeek)
# Get key: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Perplexity
# Get key: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# ================================================
# POLYMARKET WALLET CONFIGURATION
# ================================================
# Required for LIVE trading, optional for paper trading

# Your wallet's PRIVATE KEY
# - For MetaMask: Export from MetaMask > Account Details > Show Private Key
# - Enter WITHOUT the 0x prefix
# - Example: 4c0883a69102937d6231471b5dbb6204fe512961708279f1f5b8a5d8e1a3af92
POLYGON_WALLET_PRIVATE_KEY=5d11ff38d81f157cc57cffe3c0fb83600aff43478c089814528d6fe29ea00d3a

# Your wallet's PUBLIC ADDRESS
# - This is the address that holds your USDC
# - Enter WITH the 0x prefix
# - Example: 0x742d35Cc6A2F6C8b1E8Fc7b3b2E8Fc7b3b2E8Fc7b
POLYGON_FUNDER_ADDRESS=0x7D3D7629b2358d51A01B3bE54Ac37f20560a173E

# SIGNATURE TYPE - Important!
# - 0 = Standard EOA wallet (MetaMask, Coinbase Wallet, hardware wallets)
# - 1 = Magic/Email login OR browser proxy wallet
# - If you exported key from MetaMask, use 0
# - If you exported key from https://reveal.magic.link/polymarket, use 1
POLYMARKET_SIGNATURE_TYPE=0

# ================================================
# POLYMARKET API CREDENTIALS
# ================================================
# Generate these by running: python scripts/generate_api_keys.py
# These are derived from your wallet (deterministic)

POLYMARKET_API_KEY=80cebd90-92ff-6fb0-c50a-b82c66b86e8b
POLYMARKET_API_SECRET=hYoVH4ne0-Pypnl11wzU_PJrLeOBKUp5NI3luQRD1Es
POLYMARKET_API_PASSPHRASE=d184b825e61da7f4ad980c88c70d57b2506f9e739e3acd842306572c51c20acf

# ================================================
# TRADING CONFIGURATION
# ================================================

# Paper trading mode (true = simulated, false = real money)
# ALWAYS start with true!
PAPER_TRADING=true

# Starting bankroll for paper trading (USD)
BANKROLL=1000

# ================================================
# VOLUME & LIQUIDITY FILTERS
# ================================================
# Protects against slippage on illiquid markets

# Minimum 24h trading volume (USD)
MIN_MARKET_VOLUME=50000

# Minimum liquidity (USD)
MIN_MARKET_LIQUIDITY=10000

# Maximum order as % of market liquidity
MAX_ORDER_PCT_OF_LIQUIDITY=0.02

# Maximum slippage allowed
MAX_SLIPPAGE_PCT=0.02

# ================================================
# RISK MANAGEMENT
# ================================================

# Maximum position size per trade (USD)
MAX_POSITION_SIZE=100

# Minimum edge required to trade (0.08 = 8%)
MIN_EDGE=0.08

# Minimum AI confidence (0.6 = 60%)
MIN_CONFIDENCE=0.6

# Maximum daily trades
MAX_DAILY_TRADES=20

# Maximum daily loss before pausing (USD)
MAX_DAILY_LOSS=100

# Kelly criterion multiplier (0.25 = quarter Kelly)
KELLY_MULTIPLIER=0.25

# ================================================
# SCANNING CONFIGURATION
# ================================================

# Scan interval in minutes
SCAN_INTERVAL_MINUTES=30

# Number of markets to analyze per scan
MARKETS_PER_SCAN=20

# ================================================
# LOGGING
# ================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable detailed API logging
DEBUG_API_CALLS=false
